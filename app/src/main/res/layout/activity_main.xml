<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/mytitlenote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/myNote"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:includeFontPadding="false"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_18ssp"/>
    <LinearLayout
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        app:layout_constraintTop_toBottomOf="@id/mytitlenote"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/background_search"
        >
        <ImageView
            android:id="@+id/iconTimKiem"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:src="@drawable/baseline_search_24"
            app:tint="@color/colorSearchIcon"/>
        <EditText
            android:id="@+id/nhapNoiDungTimKiem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@null"
            android:hint="@string/findNote"
            android:layout_marginStart="@dimen/_12sdp"
            android:includeFontPadding="false"
            android:textColorHint="@color/colorTextHint"
            android:textSize="@dimen/_13ssp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/searchBar">

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/searchBar"
        app:layout_constraintBottom_toTopOf="@id/bottomActionBar"
        android:layout_marginStart="@dimen/_2sdp"
        android:clipToPadding="false"
        android:layout_marginEnd="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_12sdp"/>

    <LinearLayout
        android:id="@+id/bottomActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:padding="@dimen/_15sdp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/addNote"
            android:layout_width="@dimen/_23sdp"
            android:layout_height="@dimen/_23sdp"
            android:src="@drawable/ic_baseline_add_circle_outline_24"
            app:tint="@color/colorIcon"/>
        <ImageView
            android:id="@+id/addNewImage"
            android:layout_width="@dimen/_23sdp"
            android:layout_height="@dimen/_23sdp"
            android:src="@drawable/ic_baseline_image_24"
            app:tint="@color/colorIcon"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"/>
        <ImageView
            android:id="@+id/addNewWebLink"
            android:layout_width="@dimen/_23sdp"
            android:layout_height="@dimen/_23sdp"
            android:src="@drawable/ic_baseline_language_24"
            app:tint="@color/colorIcon"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/themGhiChuMoi"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/background_add_button"
        android:src="@drawable/ic_baseline_add_24"
        android:padding="@dimen/_10sdp"
        app:layout_constraintBottom_toTopOf="@id/bottomActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_20sdp"
        app:layout_constraintTop_toTopOf="@id/bottomActionBar"
        />
</androidx.constraintlayout.widget.ConstraintLayout>