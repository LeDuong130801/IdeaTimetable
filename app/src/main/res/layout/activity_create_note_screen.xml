<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".activity.CreateNoteScreen"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_40sdp"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/_10sdp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">
            <ImageView
                android:id="@+id/goBack"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:tint="@color/colorIcon"/>
            <ImageView
                android:id="@+id/hoanThanhTaoGhiChu"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/ic_check_circle_outline"
                app:tint="@color/colorIcon"/>
            <EditText
                android:id="@+id/enterTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title"
                android:textColorHint="@color/colorTextHint"
                android:textSize="@dimen/_18ssp"
                app:layout_constraintTop_toBottomOf="@id/goBack"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:textColor="@color/colorWhite"
                />
            <View
                android:id="@+id/viewbeforesubtitle"
                android:layout_width="@dimen/_5sdp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/enterTitle"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/color_before_input"
                app:layout_constraintBottom_toTopOf="@id/enterContent"
                />
            <EditText
                android:id="@+id/enterSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/subtitle"
                app:layout_constraintTop_toBottomOf="@id/enterTitle"
                app:layout_constraintStart_toEndOf="@id/viewbeforesubtitle"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorTextHint"/>
            <EditText
                android:id="@+id/enterContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_100sdp"
                app:layout_constraintTop_toBottomOf="@id/enterSubtitle"
                android:textColor="@color/colorWhite"
                android:hint="@string/enterNote"
                android:textColorHint="@color/colorTextHint"
                android:gravity="top"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                />
            <LinearLayout
                android:id="@+id/layoutAnh"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_85sdp"
                app:layout_constraintTop_toBottomOf="@id/enterContent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="horizontal">
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal"
        android:translationY="@dimen/_minus40sdp">
        <ImageView
            android:id="@+id/themAnh"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:src="@drawable/ic_add_image"
            app:tint="@color/colorIcon" />
            />
        <ImageView
            android:id="@+id/themNhiemVu"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:src="@drawable/ic_add_task"
            app:tint="@color/colorIcon" />
        />
        <TextView
            android:id="@+id/noiDungSua"
            android:layout_width="0dp"
            android:layout_height="@dimen/_26sdp"
            android:layout_weight="@integer/material_motion_duration_long_1"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="@string/edit_time_on"
            android:textColor="@color/colorIcon"
            android:textAlignment="center"
            android:textSize="@dimen/_11ssp"
            />
        <ImageView
            android:id="@+id/themTinhNang"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:src="@drawable/ic_more_vert"
            app:tint="@color/colorIcon" />
        />
    </LinearLayout>
</LinearLayout>