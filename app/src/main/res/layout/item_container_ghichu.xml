<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_ghichu"
    android:layout_marginTop="@dimen/_16sdp"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:paddingBottom="@dimen/_6sdp"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/noiDungAnh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_border_image"
        android:visibility="gone"

        />
    <TextView
        android:id="@+id/noiDungTieuDe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textStyle="bold"
        android:textSize="@dimen/_15ssp"
        android:textColor="@color/colorWhite"
        android:includeFontPadding="false"/>
    <TextView
        android:id="@+id/noiDungPhuDe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:textSize="@dimen/_12ssp"
        android:includeFontPadding="false"
        android:textColor="@color/colorTextSubtile"
        />
    <TextView
        android:id="@+id/noiDungNgay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:textSize="@dimen/_12ssp"
        android:includeFontPadding="false"
        android:textColor="@color/colorTextSubtile"
        />
</LinearLayout>